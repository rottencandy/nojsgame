doctype html
html(lang='en')
  head
    title='Untitiled game'
    link(
        rel='stylesheet'
        type='text/css'
        href='game.css'
    )
  body
    .root
        input(type='checkbox' id='start' autocomplete='off')
        .menu
            h4 Untitled Game
            label.start(for='start') Start
        - var n = 0
        .cell-wrapper
            .cell-grid
                while n < 100
                    .cell
                    - n++
                .scene
                    .car-wrapper
                        .car
                    .perspective-wrapper
                        .angled-backdrop
                        .angled-platform
                            .looping-floor
                                .road-path
                            .dist-fade-overlay
